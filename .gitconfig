# This is Git's per-user configuration file.
[user]
# Please adapt and uncomment the following lines:
	user = Oran Looney
	email = olooney@gmail.com

[alias]
    # pretty, terse one-line variant of "git log"
    lg = log \
        --graph \
        --decorate \
        --date=relative \
        --format=format:'%C(bold blue)%h%C(reset) %C(white)%s%C(reset) %C(dim white)- %an%C(reset)%C(bold yellow)%d%C(reset)'

    # slightly more verbose variant of "git log"
    lgg = log \
        --graph \
        --decorate \
        --format=format:'%C(bold blue)%h%C(reset) - %C(bold cyan)%aD%C(reset) %C(bold green)(%ar)%C(reset)%C(bold yellow)%d%C(reset)%n''          %C(white)%s%C(reset) %C(dim white)- %an%C(reset)' 

[push]
	default = simple
